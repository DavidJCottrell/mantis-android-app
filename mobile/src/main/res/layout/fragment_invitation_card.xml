<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".app.top_nav.InvitationCard">

    <!-- Task Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/invitation_card_xml"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:minWidth="225dp"
        android:minHeight="125dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        card_view:cardCornerRadius="4dp">

        <!-- Stack Text Vertically -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" >

            <!-- Task Title -->
            <TextView
                android:id="@+id/invitation_task_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project Title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp" />

            <!-- Task Description -->
            <TextView
                android:id="@+id/inviter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="Invited by: " />

        </LinearLayout>

        <!-- Invitation Accept Button -->
        <TextView
            android:id="@+id/invitation_accept_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="bottom|left"
            android:textStyle="bold"
            android:text="Accept" />

        <!-- Invitation Decline Button -->
        <TextView
            android:id="@+id/invitation_decline_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="bottom|right"
            android:textStyle="bold"
            android:text="Decline" />

    </androidx.cardview.widget.CardView>

</FrameLayout>